---
layout: default
---
<section class="games-gallery pt-0 pb-5">
  <header class="section-header mb-4">
    <h1 class="section-heading">{{ page.title | default: 'games' }}</h1>
  </header>
  <div class="row">
    <div class="col-xl-9">
      {{ content }}
      {% if page.embeds %}
        {% for game in page.embeds %}
          <article class="card mb-4 shadow-sm">
            <div class="card-body">
              <h2 class="h5">{{ game.title }}</h2>
              {% if game.description %}
                <p>{{ game.description }}</p>
              {% endif %}
              <div class="embed-responsive embed-responsive-4by3">
                {{ game.markup }}
              </div>
            </div>
          </article>
        {% endfor %}
      {% endif %}
    </div>
    <div class="col-xl-3">
      <div class="card sticky-top">
        <div class="card-body">
          <h2 class="h6 text-uppercase">Tech notes</h2>
          {% if page.tools %}
            <ul class="list-unstyled mb-0">
              {% for tool in page.tools %}
                <li class="mb-1">{{ tool }}</li>
              {% endfor %}
            </ul>
          {% else %}
            <p class="mb-0">Drop HTML, CSS, or JavaScript embeds here to make the games come alive.</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
