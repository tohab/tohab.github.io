---
layout: default
---
<section class="film-library pt-0 pb-5">
  <header class="section-header mb-4">
    <h1 class="section-heading">{{ page.title | default: 'films' }}</h1>
  </header>
  <div class="row">
    {% if page.playlists %}
      <div class="col-lg-4 mb-4">
        <aside class="sticky-top pt-2">
          <ul class="list-unstyled">
            {% for playlist in page.playlists %}
              <li class="mb-2">
                <a href="https://www.youtube.com/playlist?list={{ playlist.id }}" target="_blank" rel="noopener">{{ playlist.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </aside>
      </div>
    {% endif %}
    <div class="col-lg-{% if page.playlists %}8{% else %}12{% endif %}">
      {{ content }}
      {% if page.featured_trailers %}
        <div class="row mt-4">
          {% for trailer in page.featured_trailers %}
            <div class="col-md-6 mb-4">
              <article class="card h-100">
                <div class="card-body">
                  <h2 class="h5">{{ trailer.title }}</h2>
                  {% if trailer.year %}
                    <p class="text-muted mb-2">{{ trailer.year }}</p>
                  {% endif %}
                  {% if trailer.description %}
                    <p>{{ trailer.description }}</p>
                  {% endif %}
                  <a class="stretched-link" href="https://www.youtube.com/watch?v={{ trailer.id }}" target="_blank" rel="noopener">Watch trailer</a>
                </div>
              </article>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>
