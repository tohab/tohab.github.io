<!-- Metadata, OpenGraph and Schema.org -->
{% include metadata.liquid %}

<!-- Bootstrap & MDB -->
{% assign mdb = site.third_party_libraries.mdb %}
{% assign mdb_css_url = mdb.url.css | replace: '{{version}}', mdb.version %}
<link rel="stylesheet" href="{{ '/assets/css/bootstrap.min.css' | relative_url | bust_file_cache }}">
<link
  rel="stylesheet"
  href="{{ mdb_css_url }}"
  integrity="{{ mdb.integrity.css }}"
  crossorigin="anonymous"
>

<!-- Bootstrap Table -->
{% if page.pretty_table %}
  {% assign bootstrap_table = site.third_party_libraries['bootstrap-table'] %}
  {% assign bootstrap_table_css_url = bootstrap_table.url.css | replace: '{{version}}', bootstrap_table.version %}
  <link
    defer
    rel="stylesheet"
    href="{{ bootstrap_table_css_url }}"
    integrity="{{ bootstrap_table.integrity.css }}"
    crossorigin="anonymous"
  >
{% endif %}

<!-- Fonts & Icons -->
<link defer rel="stylesheet" href="{{ '/assets/css/academicons.min.css' | relative_url | bust_file_cache }}">
<link
  defer
  rel="stylesheet"
  type="text/css"
  href="{{ site.third_party_libraries.google_fonts.url.fonts }}"
>

<!-- Code Syntax Highlighting -->
<link
  defer
  rel="stylesheet"
  href="{{ '/assets/css/jekyll-pygments-themes-github.css' | relative_url | bust_file_cache }}"
  media=""
  id="highlight_theme_light"
>

{% if page.toc and page.toc.sidebar %}
  <!-- Sidebar Table of Contents -->
  <link defer href="{{ '/assets/css/bootstrap-toc.min.css' | relative_url | bust_file_cache }}" rel="stylesheet">
{% endif %}

<!-- Styles -->

<!-- pseudocode -->
{% if page.pseudocode %}
  {% assign pseudocode = site.third_party_libraries.pseudocode %}
  {% assign pseudocode_css_url = pseudocode.url.css | replace: '{{version}}', pseudocode.version %}
  <link
    defer
    rel="stylesheet"
    href="{{ pseudocode_css_url }}"
    integrity="{{ pseudocode.integrity.css }}"
    crossorigin="anonymous"
  >
{% endif %}

{% if site.icon.size <= 4 %}
  <link
    rel="shortcut icon"
    href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>{{ site.icon }}</text></svg>"
  >
{% elsif site.icon != blank %}
  <link rel="shortcut icon" href="{{ site.icon | prepend: '/assets/img/' | relative_url | bust_file_cache}}">
{% endif %}
<link rel="stylesheet" href="{{ '/assets/css/main.css' | relative_url | bust_css_cache }}">
<link rel="canonical" href="{{ page.url | replace:'index.html','' | absolute_url }}">

<!-- Dark Mode -->
<script src="{{ '/assets/js/theme.js' | relative_url | bust_file_cache }}"></script>
{% if site.enable_darkmode %}
  <link
    defer
    rel="stylesheet"
    href="{{ '/assets/css/jekyll-pygments-themes-native.css' | relative_url | bust_file_cache }}"
    media="none"
    id="highlight_theme_dark"
  >
  <script>
    initTheme();
  </script>
{% endif %}

<!-- GeoJSON support via Leaflet -->
{% if page.map %}
  {% assign leaflet = site.third_party_libraries.leaflet %}
  {% assign leaflet_css_url = leaflet.url.css | replace: '{{version}}', leaflet.version %}
  <link
    defer
    rel="stylesheet"
    href="{{ leaflet_css_url }}"
    integrity="{{ leaflet.integrity.css }}"
    crossorigin="anonymous"
  >
{% endif %}

<!-- diff2html -->
{% if page.code_diff %}
  {% assign highlightjs = site.third_party_libraries.highlightjs %}
  {% assign highlight_light_css_url = highlightjs.url.css.light | replace: '{{version}}', highlightjs.version %}
  {% assign highlight_dark_css_url = highlightjs.url.css.dark | replace: '{{version}}', highlightjs.version %}
  {% assign diff2html = site.third_party_libraries.diff2html %}
  {% assign diff2html_css_url = diff2html.url.css | replace: '{{version}}', diff2html.version %}
  <link
    defer
    rel="stylesheet"
    href="{{ highlight_light_css_url }}"
    integrity="{{ highlightjs.integrity.css.light }}"
    crossorigin="anonymous"
    media="screen and (prefers-color-scheme: light)"
  >
  <link
    defer
    rel="stylesheet"
    href="{{ highlight_dark_css_url }}"
    integrity="{{ highlightjs.integrity.css.dark }}"
    crossorigin="anonymous"
    media="screen and (prefers-color-scheme: dark)"
  >
  <link
    defer
    rel="stylesheet"
    href="{{ diff2html_css_url }}"
    integrity="{{ diff2html.integrity.css }}"
    crossorigin="anonymous"
  >
{% endif %}

{% if page.images %}
  <!-- Image comparison slider -->
  {% if page.images.compare %}
    {% assign img_comparison = site.third_party_libraries['img-comparison-slider'] %}
    {% assign img_comparison_css_url = img_comparison.url.css | replace: '{{version}}', img_comparison.version %}
    <link
      defer
      rel="stylesheet"
      href="{{ img_comparison_css_url }}"
      integrity="{{ img_comparison.integrity.css }}"
      crossorigin="anonymous"
    >
  {% endif %}
  <!-- Image slider -->
  {% if page.images.slider %}
    {% assign swiper = site.third_party_libraries.swiper %}
    {% assign swiper_css_url = swiper.url.css | replace: '{{version}}', swiper.version %}
    <link
      defer
      rel="stylesheet"
      href="{{ swiper_css_url }}"
      integrity="{{ swiper.integrity.css }}"
      crossorigin="anonymous"
    >
  {% endif %}
{% endif %}

{% if page.tikzjax %}
  <link defer rel="stylesheet" type="text/css" href="https://tikzjax.com/v1/fonts.css">
{% endif %}
