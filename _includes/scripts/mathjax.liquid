{% if site.enable_math %}
  {% unless page.pseudocode %}
    <!-- MathJax -->
    <script type="text/javascript">
      window.MathJax = {
        tex: {
          tags: 'ams',
        },
      };
    </script>
    {% assign mathjax = site.third_party_libraries.mathjax %}
    {% assign mathjax_js_url = mathjax.url.js | replace: '{{version}}', mathjax.version %}
    <script
      defer
      type="text/javascript"
      id="MathJax-script"
      src="{{ mathjax_js_url }}"
      integrity="{{ mathjax.integrity.js }}"
      crossorigin="anonymous"
    ></script>
    {% assign polyfill = site.third_party_libraries.polyfill %}
    {% assign polyfill_js_url = polyfill.url.js | replace: '{{version}}', polyfill.version %}
    <script
      defer
      src="{{ polyfill_js_url }}"
      crossorigin="anonymous"
    ></script>
  {% endunless %}
{% endif %}
